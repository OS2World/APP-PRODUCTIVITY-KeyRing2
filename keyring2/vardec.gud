    TRegisterStat  = (ERDUMMY, ERHACK, ERDEMOLIFETIME, EPAID, EPAIDBLO, EPAIDDES, EBETA, EBETABLO, EBETADES);
    TRegQuery      = (EFALSE, ETRUE, EBAD);

    TCryptHead     = RECORD
                         ID             : STRING[30];
                         CryptStyle     : TCryptStyle;
                         VerMaj,
                         VerMin         : BYTE;
                         Seed           : OpDate.DateTimeRec;
